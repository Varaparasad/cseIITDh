          "type": "paragraph",
          "children": [
            {
              "type": "text",
              "text": "Application Process",
              "bold": true
            }
          ]
        },
        {
          "type": "list",
          "format": "ordered",
          "children": [
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Register on the IIT Dharwad faculty recruitment portal."
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Fill out the online application form with personal, educational, and professional details."
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Upload the following documents."
                }
              ]
            }
          ]
        },
        {
          "type": "list",
          "format": "unordered",
          "children": [
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": " Detailed CV with list of publications"
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Research statement (2-3 pages)"
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Teaching statement (1-2 pages)"
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Copies of three best publications"
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Educational certificates and transcripts"
                }
              ]
            },
            {
              "type": "list-item",
              "children": [
                {
                  "type": "text",
                  "text": "Contact information of three referees"
                }
              ]
            }
          ]
        },
